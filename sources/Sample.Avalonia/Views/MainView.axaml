<UserControl x:Class="Sample.Avalonia.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sample="using:Sample"
             xmlns:viewmodels="using:Sample.Avalonia.ViewModels"
             xmlns:zenith="using:Zenith.NET.Views.Avalonia"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="viewmodels:MainViewModel"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:MainViewModel />
    </UserControl.DataContext>

    <Grid>
        <zenith:ZenithView GraphicsContext="{x:Static sample:Renderer.Context}"
                           RenderRequested="OnRenderRequested" />

        <ComboBox Margin="10"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  ItemsSource="{x:Static sample:Renderer.Samples}"
                  SelectedItem="{Binding Sample}" />
    </Grid>

</UserControl>
