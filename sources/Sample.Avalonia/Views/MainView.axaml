<UserControl x:Class="Sample.Avalonia.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sample.Avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Sample.Avalonia.ViewModels"
             xmlns:zenith="using:Zenith.NET.Views.Avalonia"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:MainViewModel"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:MainViewModel />
    </UserControl.DataContext>


    <Grid>
        <zenith:ZenithView GraphicsContext="{x:Static local:App.Context}">
            <Interaction.Behaviors>
                <EventTrigger EventName="UpdateRequested">
                    <InvokeCommandAction Command="{Binding UpdateCommand}"
                                         PassEventArgsToCommand="True" />
                </EventTrigger>

                <EventTrigger EventName="RenderRequested">
                    <InvokeCommandAction Command="{Binding RenderCommand}"
                                         PassEventArgsToCommand="True" />
                </EventTrigger>
            </Interaction.Behaviors>
        </zenith:ZenithView>
    </Grid>

</UserControl>
